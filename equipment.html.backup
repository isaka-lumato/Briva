            padding: 50px;
            border-radius: 10px;
            text-align: center;
            margin: 40px 0;
            position: relative;
            overflow: hidden;
        }

        .pricing-highlight::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 182, 0, 0.1) 0%, transparent 70%);
            animation: pulse 3s ease-in-out infinite;
        }

        @keyframes pulse {

